
<%= form_for @message,html: {class: "form-horizontal"} do |f| %>    

  <div class="form-group">
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
          <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
      </div>
    <% end %>
    
    <label class="col-sm-2 control-label" for="message_name">名前:</label>
    <div class="col-sm-5"><%= @message_name %>
      <%= f.text_field :name ,:class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="message_body">内容:</label>
    <div class="col-sm-5">
      <%= f.text_area:body ,:class=>"form-control",:rows=>"10" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="message_age">年齢:</label>
    <div class="col-sm-1">
      <%= f.text_field:age ,:class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-2">
      <%= f.submit class: "btn btn-default btn-primary" %>
    </div>
  </div>

<% end %>