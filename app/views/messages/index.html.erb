<div class="container">
  
  <div class="panel panel-default">
    <div class="panel-heading">
      メッセージ一覧
    </div>
    <div class="panel-body">
      <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
      <% end %>
    </div>
  </div>
    
      <%= form_for(Message.new,html: {class: "form-horizontal"}) do |f| %>
         <div class="form-group">
            <% if @message.errors.present? %>
            <div class="alert alert-danger">
              <%= alert %>
              <ul>
              <% @message.errors.full_messages.each do |full_message| %>
              <li>
              <%= full_message %>
              </li>
              <% end %> 
              </ul>
           </div>
      <% end %>
      
      <label class="col-sm-2 control-label" for="name">
      名前:</label>
      <div class="col-sm-5"><%= f.text_field :name ,:class=>"form-control",:id=>"name" %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="naiyo">
      内容:
      </label>
        <div class="col-sm-5">
          <%= f.text_area:body ,:class=>"form-control",:id=>"naiyo",:rows=>"10" %>
        </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 col-sm-offset-2">
        <%= f.submit class: "btn btn-default btn-primary" %>
      </div>
    </div>

  <% end %>

</div>

